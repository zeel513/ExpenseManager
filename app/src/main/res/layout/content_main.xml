<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.user1.expensemanager.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#33ffffff">

        <GridLayout
            android:elevation="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:rowCount="2"
            android:columnCount="2"
            android:id="@+id/g1"
            android:backgroundTintMode="src_over"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/side_nav_bar">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Current Balance:"
                android:id="@+id/textView2"
                android:elegantTextHeight="false"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="25dp"
                android:textColor="@color/abc_primary_text_disable_only_material_dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0.0"
                android:id="@+id/textView3"
                android:layout_gravity="right"
                android:textSize="25sp"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/abc_primary_text_disable_only_material_dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="This Month&apos;s Balance:"
                android:id="@+id/textView4"
                android:textSize="25sp"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/abc_primary_text_disable_only_material_dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0.0"
                android:id="@+id/textView5"
                android:layout_gravity="right"
                android:textSize="25sp"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/abc_primary_text_disable_only_material_dark" />
        </GridLayout>
        <GridLayout
            android:elevation="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:rowCount="1"
            android:columnCount="2"
            android:id="@+id/g2"
            android:layout_marginBottom="15dp"
            android:background="@drawable/side_nav_bar"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="This Month&apos;s Income:"
                android:id="@+id/textView6"
                android:textSize="25sp"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/abc_primary_text_disable_only_material_dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0.0"
                android:id="@+id/textView7"
                android:layout_gravity="right"
                android:textSize="25sp"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/abc_primary_text_disable_only_material_dark" />
        </GridLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="left|center_horizontal"
            android:rowCount="1"
            android:columnCount="2"
            android:id="@+id/g3">

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="#ffd9d9d9"
                card_view:cardCornerRadius="2dp"
                android:layout_margin="6dp"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                card_view:cardElevation="6dp">

            <Button
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="+ INCOME"
                    android:textColor="#FFFFFF"
                    android:id="@+id/button"
                    android:textSize="25dp"
                    android:background="@drawable/ripple_effect"
                    android:fontFamily="sans-serif-condensed"/>
        </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="#ffd9d9d9"
                card_view:cardCornerRadius="2dp"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:layout_margin="6dp"
                card_view:cardElevation="6dp">

                <Button
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="+ EXPENSE"
                    android:id="@+id/button2"
                    android:textColor="#FFFFFF"
                    android:textSize="25dp"
                    android:background="@drawable/ripple_effect"
                    android:fontFamily="sans-serif-condensed" />
            </android.support.v7.widget.CardView>

        </GridLayout>
        <GridLayout
            android:elevation="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:rowCount="3"
            android:columnCount="2"
            android:id="@+id/g4"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/side_nav_bar">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Today&apos;s Expense:"
                android:id="@+id/textView8"
                android:textSize="25sp"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/abc_primary_text_disable_only_material_dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0.0"
                android:id="@+id/textView9"
                android:layout_gravity="right"
                android:textSize="25sp"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/abc_primary_text_disable_only_material_dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="This Month&apos;s Expense:"
                android:id="@+id/textView10"
                android:textSize="25sp"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginLeft="10dp"
                android:textColor="@color/abc_primary_text_disable_only_material_dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0.0"
                android:id="@+id/textView11"
                android:layout_gravity="right"
                android:textSize="25sp"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginRight="10dp"
                android:textColor="@color/abc_primary_text_disable_only_material_dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Total Expense:"
                android:id="@+id/textView12"
                android:textSize="25sp"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/abc_primary_text_disable_only_material_dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0.0"
                android:id="@+id/textView13"
                android:layout_gravity="right"
                android:textSize="25sp"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/abc_primary_text_disable_only_material_dark" />
        </GridLayout>
    </LinearLayout>
</RelativeLayout>
